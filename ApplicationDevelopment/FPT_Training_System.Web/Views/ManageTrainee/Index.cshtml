@model IEnumerable<FPT_Training_System.Data.Models.AspNetUser>

@{
    ViewBag.Title = "ManageTrainer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MTrainee = "active";
}

<h2>Manage trainee</h2>

<div class="btn-group">
    <a href="@Url.Action("Create", "ManageTrainee")">
        <button type="button" class="btn btn-default">
            Create New
        </button>
    </a>
</div>

@using (Html.BeginForm("Index","ManageTrainee",FormMethod.Get))
{
    @*<p>
        Find: @Html.TextBox("searchString") <br />
        <input type="submit" value="Filter" />
    </p>*@
    <input type="text" name="searchString" />
    <button type="submit">Find</button>
}

<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.user)
            {
                <tr>
                    <th>
                        @item.Fullname
                    </th>
                    <th>
                        @item.Email
                    </th>
                    <th>
                        @item.Contact
                    </th>
                    <th>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>